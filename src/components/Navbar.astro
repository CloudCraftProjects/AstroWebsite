---
import NavbarLink from "./NavbarLink.astro";
---

<nav>
  <div class="container">
    <div class="brand">
      <NavbarLink icon={["solid", "cloud"]} href="/" noActive>CloudCraft</NavbarLink>
    </div>
    <div class="nodes">
      <NavbarLink icon={["solid", "cloud"]} href="/">Home</NavbarLink>
      <div class="nav-projects">
        <NavbarLink icon={["solid", "newspaper"]} href="/projects/">Projekte</NavbarLink>
      </div>
      <NavbarLink icon={["regular", "circle-question"]} href="/faq/">FAQ</NavbarLink>
      <div class="nav-discord">
        <NavbarLink icon={["brands", "discord"]} href="/r/discord">Discord</NavbarLink>
      </div>
    </div>
  </div>
</nav>
<style>
  nav {
    background-color: rgb(33, 37, 41);
    padding: 1em;
    font-size: large;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;

    max-width: var(--content-width);
    margin-right: auto;
    margin-left: auto;
  }
  .container > .nodes {
    display: flex;
    align-items: center;
    gap: 1em;
  }
  @media screen and (max-width: 900px) {
    .container {
      font-size: 0.9em;
    }
  }
  @media screen and (max-width: 885px) {
    .container {
      max-width: 96%;
    }
  }
  @media screen and (max-width: 705px) {
    .container {
      justify-content: center;
    }
    .brand {
      display: none;
    }
  }
  @media screen and (max-width: 535px) {
    .nav-projects {
      display: none;
    }
  }
  @media screen and (max-width: 350px) {
    .nav-discord {
      display: none;
    }
  }
</style>
