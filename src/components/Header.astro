---
import type { HTMLAttributes } from "astro/types";

interface Props {
  title: string;
  image: HTMLAttributes<"img">;
}

const { title, image } = Astro.props;
---

<header>
  <div>
    <h1>{title}</h1>
    <slot />
  </div>
  <img {...image} />
</header>
<style>
  header {
    display: flex;
    justify-content: space-between;
    background-color: rgb(31, 102, 132);
    padding-top: 2.5em;
    padding-bottom: 1.5em;
    padding-right: 20%;
    padding-left: 20%;
  }
  h1 {
    font-weight: bold;
  }
</style>
