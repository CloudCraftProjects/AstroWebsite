---
import Image from "astro/components/Image.astro";

interface Props {
  title: string;
  image?: {
    src: string;
    alt: string;
    width: number;
    height: number;
  };
}

const { title, image } = Astro.props;
---

<header>
  <section>
    <h1>{title}</h1>
    <slot />
  </section>
  {image && <Image {...image} loading={"eager"} />}
</header>
<style>
  header {
    display: flex;
    justify-content: space-between;
    background-color: #1a5670;
    padding-top: 3.5em;
    padding-bottom: 1em;
    padding-right: calc((100% - var(--content-width)) / 2);
    padding-left: calc((100% - var(--content-width)) / 2);
  }
  section {
    max-width: 60%;
  }
  h1 {
    font-weight: bold;
  }
  @media screen and (max-width: 590px) {
    header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    section {
      max-width: 100%;
    }
  }
</style>
