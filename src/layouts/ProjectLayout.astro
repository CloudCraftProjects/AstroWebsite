---
import Header from "../components/Header.astro";
import Layout from "./Layout.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
    keywords?: string[];
  };
}

const { title, description, keywords } = Astro.props.frontmatter;
const projectId = title.toLowerCase();

const allKeywords = keywords || [];
allKeywords.push(projectId);
---

<Layout title={title} description={description} keywords={allKeywords}>
  <Header title={title} image={{ src: "/assets/logo.webp", alt: "Logo von CloudCraft", width: 240, height: 240 }}>
    <p>{description}</p>
  </Header>
  <main>
    <article>
      <h2>{title}</h2>
      <slot />
    </article>
  </main>
</Layout>
<style>
  main {
    margin-top: 2em;
    margin-bottom: 2em;
    max-width: calc(var(--content-width) * 0.9);
    margin-left: auto;
    margin-right: auto;
  }
  h2 {
    text-align: center;
    font-weight: bold;
    font-size: 2em;
  }
</style>
